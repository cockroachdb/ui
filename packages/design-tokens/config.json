{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "dist/web/",
      "files": [
        {
          "destination": "_tokens.scss",
          "format": "scss/variables"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "dist/web/",
      "files": [
        {
          "format": "javascript/es6",
          "destination": "tokens.js"
        }
      ]
    },
    "ts": {
      "transformGroup": "js",
      "buildPath": "dist/web/",
      "files": [
        {
          "format": "javascript/es6",
          "destination": "tokens.d.ts"
        }
      ]
    }
  }
}
